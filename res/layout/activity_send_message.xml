<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:fitsSystemWindows="true">

    <include layout="@layout/layout_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/id_et_message_content"
            style="@style/multi_edittext_full_style"
            android:layout_marginTop="20dip"
            android:hint="@string/send_message_hint_text"
            android:padding="@dimen/padding_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/id_btn_confirm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_rectangle"
            android:text="@string/confirm"
            android:textColor="@color/base_level_1"
            android:textSize="@dimen/title" />
    </LinearLayout>

</LinearLayout>